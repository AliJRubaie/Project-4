<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:background="@drawable/off_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/nightlifeBTNS"

            android:layout_width="137dp"
            android:src="@drawable/create"
            android:layout_height="137dp"
            android:layout_marginLeft="115dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nightlife"
            android:id="@+id/nightlifeBTN"
            android:layout_gravity="center_horizontal"
            android:textColor="#800b0b" />
        <ImageView
            android:id="@+id/sportsAndOutdoorsBTNS"
            android:layout_width="137dp"
            android:src="@drawable/sport"
            android:layout_height="137dp"
            android:layout_marginLeft="115dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sports &amp; Outdoors"
            android:id="@+id/sportsAndOutdoorsBTN"
            android:layout_gravity="center_horizontal"
            android:textColor="#800b0b"
            android:layout_marginBottom="18dp" />

        <ImageView
            android:id="@+id/partiesBTNS"
            android:src="@drawable/parties"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="115dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Parties"
            android:id="@+id/partiesBTN"
            android:layout_gravity="center_horizontal"
            android:textColor="#800b0b"
            android:layout_marginTop="18dp" />

        <ImageView
            android:id="@+id/kidsBTNS"
            android:src="@drawable/images1"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:layout_marginLeft="115dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kids"
            android:id="@+id/kidsBTN"
            android:layout_gravity="center_horizontal"
            android:textColor="#800b0b" />

        <ImageView
            android:id="@+id/charityBTNS"
            android:src="@drawable/charity1"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:layout_marginLeft="115dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Charity"
            android:id="@+id/charityBTN"
            android:layout_gravity="center_horizontal"
            android:textColor="#800b0b"
            android:layout_marginBottom="18dp" />
        <ImageView
            android:id="@+id/geeksBTNS"
            android:layout_width="137dp"
            android:src="@drawable/geeks"
            android:layout_height="137dp"
            android:layout_marginLeft="115dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Geeks"
            android:id="@+id/geeksBTN"
            android:layout_gravity="center_horizontal"
            android:textColor="#800b0b"
            android:layout_marginBottom="18dp" />
    </LinearLayout>

</ScrollView>